.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  height: 100vh;
}
.container .search-bar {
  display: flex;
  align-items: center;
  background-color: #fff;
  padding: 10rpx;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}
.container .search-bar .search-icon {
  width: 40rpx;
  height: 40rpx;
}
.container .search-bar .search-input {
  flex: 1;
  margin-left: 10rpx;
  padding: 5rpx;
  border: none;
  outline: none;
  font-size: 24rpx;
  color: #333;
}
.container .search-bar .search-btn {
  padding: 8rpx 16rpx;
  background-color: #0aa3b4;
  color: #fff;
  border: none;
  border-radius: 20rpx;
  font-size: 24rpx;
  cursor: pointer;
}
.container .search-result {
  text-align: center;
}
.container .search-result .loading {
  margin-top: 20rpx;
}
.container .search-result .loading .loading-text {
  color: #999;
  font-size: 24rpx;
}
.container .search-result .empty {
  margin-top: 20rpx;
}
.container .search-result .empty .empty-text {
  color: #999;
  font-size: 24rpx;
}
.container .search-result .result-item {
  margin-top: 10rpx;
  padding: 10rpx;
  background-color: #fff;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
  border-radius: 8rpx;
}
.container .search-result .result-item .result-text {
  color: #333;
}