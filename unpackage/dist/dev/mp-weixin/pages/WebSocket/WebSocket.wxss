page {
  background-color: #f4f4f4;
}
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.container .chat-content {
  flex: 1;
  padding-top: 20rpx;
  padding-bottom: 120rpx;
}
.container .chat-content .message-container {
  padding: 0 20rpx;
  align-items: center;
  margin-bottom: 10rpx;
  justify-content: space-between;
}
.container .chat-content .message-container .message-left {
  display: flex;
  align-items: center;
}
.container .chat-content .message-container .message-right {
  display: flex;
  text-align: left;
  justify-content: flex-end;
}
.container .chat-content .message-container .avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
.container .chat-content .message-container .message-content-left,
.container .chat-content .message-container .message-content-right {
  max-width: 70%;
  padding: 10rpx;
  border-radius: 15rpx;
}
.container .chat-content .message-container .message-content-left > .message-text {
  padding: 20rpx;
  border-radius: 15rpx;
  display: block;
  background-color: white;
}
.container .chat-content .message-container .message-content-right > .message-text {
  padding: 20rpx;
  border-radius: 15rpx;
  display: block;
  background-color: #95ec69;
}
.container .chat-content .message-container .message-text {
  font-size: 30rpx;
  color: #333;
}
.container .chat-content .message-container .message-time {
  font-size: 20rpx;
  color: #999;
  float: right;
  margin-top: 10rpx;
}
.container .chat-content .message-container .message-ltime {
  font-size: 20rpx;
  color: #999;
  margin-top: 10rpx;
}
.container .input-box {
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 750rpx;
  height: 8vh;
  background-color: white;
  padding: 0 30rpx;
  padding-bottom: 30rpx;
  margin-bottom: 0px;
}
.container .input-box .input-field {
  width: 70%;
  padding: 10rpx;
  border: 1rpx solid #ccc;
  border-radius: 4rpx;
  font-size: 24rpx;
}
.container .input-box .send-btn {
  width: 20%;
  padding: 10rpx;
  background-color: #f3f3f3;
  color: #00cc00;
  border: none;
  border-radius: 4rpx;
  font-size: 24rpx;
  margin-left: 10rpx;
}